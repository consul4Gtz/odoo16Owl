        <field name="custom_handler_model_id" ref="model_l10n_hn_sar_libro"/>
        <field name="column_ids">
            <record id="l10n_hn_sar_1" model="account.report.column">
                <field name="name">Factura</field>
                <field name="expression_label">factura</field>
               
            </record>
            <record id="l10n_hn_sar_2" model="account.report.column">
                <field name="name">Empresa</field>
