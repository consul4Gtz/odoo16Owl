                <field name="name">RTN</field>
                <field name="expression_label">rtn</field>
               
            </record>
            <record id="l10n_hn_sar_3" model="account.report.column">
                <field name="name">Grabado 15</field>
                <field name="expression_label">gravado15</field>
                <field name="figure_type">monetary</field>
            </record>
            <record id="l10n_hn_sar_4" model="account.report.column">
                <field name="name">Grabado 18</field>
                <field name="expression_label">gravado18</field>
