            </record>
            <record id="l10n_hn_sar_9" model="account.report.column">
                <field name="name">ISV 18</field>
                <field name="expression_label">impuesto18</field>
                <field name="figure_type">monetary</field>
            </record>
            <record id="l10n_hn_sar_10" model="account.report.column">
                <field name="name">Total</field>
                <field name="expression_label">total</field>
                <field name="figure_type">monetary</field>
            </record>
        </field>
        <field name="line_ids">
            <record id="line_l10n_hn_name" model="account.report.line">
                <field name="name">Listado por Fechas de Factura</field>
            </record> 
        </field>
    </record>
    <record id="action_l10n_hn_sar" model="ir.actions.client">
        <field name="name">Libro de ventas</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'report_id': ref('l10n_hn_report.report_l10n_hn_sar_libro')}"/>
