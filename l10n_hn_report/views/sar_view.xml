<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_sar_view_tree" model="ir.ui.view">
        <field name="name">report_sar.view.tree</field>
        <field name="model">account.report.sar</field>
        <field name="arch" type="xml">
            <tree string="Libro Ventas">
                <field name="factura"/>
                <field name="empresa"/>
                <field name="rtn"/>  
            </tree>
        </field>
    </record>
    <record id="report_sar_view_form" model="ir.ui.view">
        <field name="name">report_sar.view.form</field>
        <field name="model">account.report.sar</field>
        <field name="arch" type="xml">
            <form string="Libro Ventas">
                <sheet>
                    <group>
                        <field name="factura"/>
                        <field name="empresa"/>
                        <field name="rtn"/>
                        <field name="gravado15"/>
                        <field name="gravado18"/>
                        <field name="exento"/>
                        <field name="exonerado"/>
                        <field name="impuesto15"/>
                        <field name="impuesto18"/>
                        <field name="total"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
